# Backend Environment Variables
# Copy this file to .env and fill in the values

# Flask Configuration
SECRET_KEY=your-secret-key-here-change-in-production
FLASK_ENV=development

# Database Configuration
# SQLite (default)
DATABASE_URL=sqlite:///racing.db

# PostgreSQL (for production)
# DATABASE_URL=postgresql://user:password@localhost/racing_db

# OneDrive Integration (Future Feature)
# Register your application at https://portal.azure.com
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret
ONEDRIVE_REDIRECT_URI=http://localhost:5000/auth/callback

# CORS Settings
CORS_ORIGINS=http://localhost:3000,http://localhost:5000

# Server Configuration
HOST=0.0.0.0
PORT=5000
DEBUG=True
